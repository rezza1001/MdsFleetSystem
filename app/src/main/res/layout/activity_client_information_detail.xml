<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.client.secure.ClientInformationDetailActivity">

    <include
        android:id="@+id/lay_header"
        layout="@layout/header_with_arrow_back_secure_ui"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/bottomnav_client"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_header"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_light"
                android:text="Informasi Kontrak Saya"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_blue_color"
                android:layout_marginBottom="15dp" />

            <androidx.cardview.widget.CardView
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/bg_white_color"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Kantor Perwakilan (KSKC)"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="No. Kontrak"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_contract"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Status Kontrak"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Tanggal Kontrak"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_contract_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Tenor"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_tenor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Sisa Tenor"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_sisa_tenor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Angsuran"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_angsuran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Cara Bayar"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_carabayar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Pembayaran Terakhir / Angsuran"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_lastinstallment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Tagihan Selanjutnya / Angsuran"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_nextinstallment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text="Keterangan Aset"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blue_color"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/tv_asset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light"
                            android:text=""
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_span="4"
                            android:background="?android:attr/listDivider" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rvly_detail"
                        android:layout_marginTop="10dp"
                        android:background="@color/text_blue_color"
                        android:layout_width="match_parent"
                        android:layout_height="43dp">
                        <TextView
                            android:id="@+id/txvw_detail"
                            android:layout_centerInParent="true"
                            android:textColor="@color/bg_white_color"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Detail Angsuran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/txvw_detail"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_arrow_forward_24"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="@color/bg_white_color" />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_attach_file_24"
                    android:layout_marginEnd="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/text_blue_color" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Dokumen"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/text_blue_color" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/bg_white_color"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvw_documents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_empty"
                        android:visibility="gone"
                        android:text="Dokumen tidak ditemukan"
                        android:fontFamily="@font/ubuntu_light"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="#FFE8C7"
                        android:textColor="#de000000"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>