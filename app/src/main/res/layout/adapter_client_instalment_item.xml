<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:contentPadding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/bg_white_color"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_period"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_blue_color"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:text="Angsuran ke - x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/view_line"
                android:layout_marginTop="10dp"
                android:background="#DCD9D9"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#707070"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Nilai Angsuran"
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_amount"
                    android:textSize="14sp"
                    android:textColor="@color/text_blue_color"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rp. 000.000.00"
                    android:layout_weight="5.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#707070"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Tanggal Jatuh Tempo"
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_dueDate"
                    android:textSize="14sp"
                    android:textColor="@color/text_blue_color"
                    android:fontFamily="@font/roboto_regular"
                    android:text="10 Feb 2021"
                    android:layout_weight="5.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#707070"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Tanggal Pembayaran"
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_paymentDate"
                    android:textSize="14sp"
                    android:textColor="@color/text_blue_color"
                    android:fontFamily="@font/roboto_regular"
                    android:text="10 Feb 2021"
                    android:layout_weight="5.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnly_overDue"
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#707070"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Keterlambatan"
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_overDue"
                    android:textSize="14sp"
                    android:textColor="@color/text_blue_color"
                    android:fontFamily="@font/roboto_regular"
                    android:text="2 Hari"
                    android:layout_weight="5.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnly_penalty"
                android:layout_marginBottom="10dp"
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#707070"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Denda"
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_penalty"
                    android:textSize="14sp"
                    android:textColor="@color/text_blue_color"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rp 000.000"
                    android:layout_weight="5.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>