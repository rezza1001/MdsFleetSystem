<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/lay_header"
        layout="@layout/header_drivsecure_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/rvly_status"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/lay_header"
        android:background="#00c853">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvw_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubuntu_light"
                android:text="Senin, 12 September 2022"
                android:textColor="@color/bg_white_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txvw_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/ubuntu_light"
                android:text="08:30"
                android:textColor="@color/bg_white_color"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rvly_status"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txvw_title"
            android:text="Serah Terima Kunci"
            android:textColor="@color/text_blue_color"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/ubuntu_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_absentIn"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:contentPadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/ubuntu_light"
                    android:textStyle="bold"
                    android:text="Pengambilan Kunci"
                    android:textSize="14sp"
                    android:textColor="@color/text_blue_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Tanggal"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_dateIn"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textStyle="bold"
                        android:text="Senin, 12 September 2022"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Jam"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_inTime"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textStyle="bold"
                        android:text="08:30"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Kendaraan"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_car1"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textStyle="bold"
                        android:text="-"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Pemberi"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_give"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textStyle="bold"
                        android:text="Pak Aldi"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_absentOut"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/bg_white_color"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:contentPadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/ubuntu_light"
                    android:textStyle="bold"
                    android:text="Pengembalian Kunci"
                    android:textSize="14sp"
                    android:textColor="@color/text_blue_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Tanggal"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_outDate"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textStyle="bold"
                        android:text="-"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Jam"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_outTime"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textStyle="bold"
                        android:text="-"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Kendaraan"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_car2"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textStyle="bold"
                        android:text="Grand Max"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Penerima"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_receiver"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/ubuntu_light"
                        android:textStyle="bold"
                        android:text="-"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout

        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_checkIn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_button"
            android:fontFamily="@font/ubuntu_light"
            android:text="Pengambilan"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btn_checkOut"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_button"
            android:fontFamily="@font/ubuntu_light"
            android:text="Pengembalian"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>