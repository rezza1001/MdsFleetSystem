<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_white_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imvw_icon_00"
        android:src="@drawable/ic_downloadapps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <LinearLayout
        android:layout_below="@+id/imvw_icon_00"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Perubahan Aplikasi"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txvw_desc_00"
            android:text="Aplikasi Demobooker telah berganti versi. Untuk menggunakan Demobooker silahkan download aplikasi terbaru lebih dahulu"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#99000000"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/mrly_download_00"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:background="#3db54a"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_cloud_download"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/bg_white_color" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/bg_white_color"
                    android:layout_marginStart="10dp"
                    android:text="Download Applikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>